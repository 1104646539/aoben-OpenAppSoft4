<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/title_color"
                android:fitsSystemWindows="true"
                android:gravity="center_vertical"
                android:paddingLeft="-5dp"
                android:paddingRight="0dp"
                android:theme="@style/ToolBarTheme"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_main_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="28sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingTop="15dp"
                            android:text="检测项目:"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            />

                        <Spinner
                            android:id="@+id/spn_project"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:spinnerMode="dialog"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_projectName"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:paddingTop="15dp"
                            android:text="农药残留"
                            android:visibility="gone"/>


                        <TextView
                            android:id="@+id/tv_project"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:spinnerMode="dialog"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:paddingTop="10dp"
                            android:visibility="visible"></TextView>

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:textColor="@android:color/white"
                            android:textSize="28sp" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/title_color"
                android:paddingLeft="10dp"
                android:text="卡片检测"
                android:textColor="@android:color/white"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/tv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/title_color"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textSize="32sp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone">


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测项目:"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试剂盒编号:"
                    android:textColor="@color/text_black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tv_card_number"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_select_all"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/cb_select_all"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cb_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全选"
                        android:textColor="@android:color/black"
                        android:textSize="26sp" />
                </LinearLayout>

                <CheckBox

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/cb_selector"
                    android:text="全选"
                    android:textSize="26sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_alis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="通道号"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="样品编号"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="样品名称"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_yzl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:gravity="center"
                    android:text="抑制率"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="检测结果"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="被检单位"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="商品来源"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="组织机构"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="重量（Kg）"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbarSize="20dp"
                    android:scrollbarThumbVertical="@drawable/scroll_bar_s"
                    android:scrollbarTrackVertical="@drawable/scroll_bar_l"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_compare_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="对照值:"
                        android:textColor="@android:color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_compare"
                        style="@style/BtnBottom"
                        android:text="对照" />

                    <Button
                        android:id="@+id/btn_test"
                        style="@style/BtnBottom"
                        android:text="检测" />

                    <Button
                        android:id="@+id/btn_open_close_lid"
                        style="@style/BtnBottom"
                        android:text="开关盖"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_out_in_card"
                        style="@style/BtnBottom"
                        android:text="进出卡"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_upload"
                        style="@style/BtnBottom"
                        android:text="上传"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_print"
                        style="@style/BtnBottom"
                        android:text="打印" />

                    <Button
                        android:id="@+id/btn_openorclose"
                        style="@style/BtnBottom"
                        android:text="开关盖"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_return"
                        style="@style/BtnBottom"
                        android:text="返回" />
                    <Button
                        android:id="@+id/btn_changemethod"
                        style="@style/BtnBottom"
                        android:textSize="22sp"
                        android:text="方式切换" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>