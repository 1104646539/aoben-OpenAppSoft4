<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical"
    tools:context="com.open.soft.openappsoft.multifuction.activity.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,13:1"
        android:textSize="36sp"
        android:layout_weight="1"
        android:background="@color/THEME_COLOR"
        android:gravity="center"
        android:text="农药残留检测"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pesticide_test"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default1"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="58dp"
            android:text="多功能检测"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btn_data_manage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default1"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:text="数据管理"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="58dp" />

        <Button
            android:id="@+id/btn_sys_setting"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_default1"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:text="系统设置"
            android:textColor="@android:color/white"
            android:textSize="58dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>