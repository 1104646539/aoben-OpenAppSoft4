<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/THEME_COLOR"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <TextView
                android:id="@+id/tv_mac_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="MAC地址:"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_sample_type_main"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="样本主类"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_sample_type_child"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="样本子类"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_bcheck_ori"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="受检单位"
                android:textColor="#ffffff"
                android:textSize="36sp" />
            <Button
                android:id="@+id/btn_check_ori"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="检测单位"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_open_1"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="网站设置"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_open_2"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:visibility="gone"
                android:text="密码设置"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_open_4"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="设备名(SN)设置"
                android:textColor="#ffffff"
                android:textSize="36sp" />


            <Button
                android:id="@+id/btn_open_5"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="修改标题"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="36sp" />


            <Button
                android:id="@+id/btn_open_3"
                android:layout_width="300dp"
                android:visibility="gone"
                android:layout_height="80dp"
                android:background="@drawable/btn_default1"
                android:text="本机归属地设置"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
