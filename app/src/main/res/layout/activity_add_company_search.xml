<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddCompanySearchActivity">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:background="@color/THEME_COLOR"
      android:gravity="center_vertical"
      android:paddingLeft="10dp"
      android:text="新建企业"
      android:textColor="#ffffff"
      style="@style/baseData_title_style1" />
  <LinearLayout
      android:layout_marginTop="@dimen/dp_40"
      android:layout_width="match_parent"
      android:layout_height="90dp">
    <TextView
        android:text="企业名称"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/et_add_name"
        android:lines="1"
        android:inputType="text"
        android:hint="请填写企业名称"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

  </LinearLayout>
  <View
      android:background="@color/black"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
  <LinearLayout
      android:layout_marginTop="@dimen/dp_40"
      android:layout_width="match_parent"
      android:layout_height="90dp">
    <TextView
        android:text="机构代码"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/et_add_unm"
        android:lines="1"
        android:inputType="text"
        android:hint="请填写企业组织机构代码"
        android:textColor="@color/black"
        android:maxLength="50"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

  </LinearLayout>
  <View
      android:background="@color/black"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
  <TextView
      android:id="@+id/tv_add_commit"
      android:gravity="center"
      android:layout_gravity="center"
      android:textSize="20dp"
      android:textColor="@color/white"
      android:text="确定"
      android:background="@color/THEME_COLOR"
      android:layout_marginTop="60dp"
      android:layout_width="260dp"
      android:layout_height="60dp"/>
  </LinearLayout>