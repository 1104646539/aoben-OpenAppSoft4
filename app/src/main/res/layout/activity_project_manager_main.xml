<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BACK_GROUND_COLOR">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,13:1"
        android:textSize="36sp"
        android:layout_weight="1"
        android:background="@color/THEME_COLOR"
        android:gravity="center"
        android:text="项目管理"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/activity_project_manager_btn_checkunit"
                android:layout_margin="50dp"
                android:text="检测单位"
                style="@style/project_manager_button_style" />

            <Button
                android:id="@+id/activity_project_manager_btn_checker"
                android:layout_margin="50dp"
                android:layout_marginLeft="30dp"
                android:text="检验员"
                style="@style/project_manager_button_style" />

            <Button
                android:id="@+id/activity_project_manager_btn_project"
                android:layout_margin="50dp"
                android:text="检测项目"
                style="@style/project_manager_button_style" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/activity_project_manager_btn_reagentcompany"
                android:layout_margin="50dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:text="试剂厂商"
                style="@style/project_manager_button_style" />

            <Button
                android:id="@+id/activity_project_manager_btn_checkpicture"
                android:layout_margin="50dp"
                android:text="检测图片"
                style="@style/project_manager_button_style" />

            <Button
                android:id="@+id/activity_project_manager_btn_cardcompany"
                android:layout_margin="50dp"
                android:layout_marginLeft="30dp"
                android:text="试剂厂商"
                style="@style/project_manager_button_style" />
            <Button
                android:id="@+id/activity_project_manager_btn_sampletype"
                android:layout_margin="50dp"
                android:text="样品类型"
                style="@style/project_manager_button_style" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/activity_project_manager_btn_samplename"
                android:layout_margin="50dp"
                android:text="样品名称"
                style="@style/project_manager_button_style" />

            <Button
                android:id="@+id/activity_project_manager_btn_sampleunit"
                android:layout_margin="50dp"
                android:text="商品来源"
                style="@style/project_manager_button_style" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>